<div id="post_show_content" class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date"><%= @game.created_at.strftime('%A, %B %d') %></p>
    <h1><%= @game.name %></h1>
    <hr>
  </header>
  
  <div id="content">
    
    <% if @game.image1.present? %>
      <%= image_tag @game.image1.url(:big) %>
    <% end %>
    <% if @game.image2.present? %>
      <%= image_tag @game.image2.url(:big) %>
    <% end %>
    <% if @game.image3.present? %>
      <%= image_tag @game.image3.url(:big) %>
    <% end %>
    
    <%= markdown @game.description %>
    
    <%#= VIDEO %>
    <% if @game.video_id != "" %>
      <div class="game-video">
        <iframe src='https://www.youtube.com/embed/<%= @game.video_id %>/?rel=0&autoplay=0' frameborder='0' allowfullscreen width="640" height="360"></iframe>      
      </div>
    <% end %>
    
    <% if @game.link != "" %>
      <div class="button-wrapper">
        <a href="<%= @game.link %>" class="project-button" target="blank">
          Play <%= @game.name %>!
        </a>
      </div>
    <% end %>
  </div>
  
  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_game_path(@game) %>
      <%= link_to "Delete", game_path(@game), method: :delete, 
            data: { confirm: "Are you sure you want to delete this game?"} %>
    </div>
  <% end %>
  
  <hr>
</div>