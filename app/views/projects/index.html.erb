<h1 id="page_title">Stuff I've built</h1>

<div id="posts_wrapper" class="skinny-wrapper">
  
  <% @projects.each do |project| %>
    <div class="post">
      <p class="date"><%= project.created_at.strftime('%A, %B %d') %></p>
      <h2><%= link_to project.title, project %></h2>
      <% if project.image.present? %>
        <%= link_to (image_tag project.image.url(:small)), project %>
      <% end %>
      <hr>
    </div>
  <% end %>
  
</div>

<%= will_paginate @projects %>